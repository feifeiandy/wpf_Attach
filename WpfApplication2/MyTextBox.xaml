<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:local="clr-namespace:ClassLibrary1;assembly=ClassLibrary1"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="TextBox" x:Key="mt">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <!--此处可以不使用local:TextBoxHelper.MyTxt，使用了只和资源样式有关和附加属性无关-->
                        <TextBox Background="Green" Text="{TemplateBinding local:TextBoxHelper.MyTxt}"></TextBox>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>
</ResourceDictionary>
    
    
    
    
    